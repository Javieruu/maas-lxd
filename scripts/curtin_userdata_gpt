  # builtin_03: ["sh", "-c", 'sgdisk -t "3:4FBD7E29-9D25-41B8-AFD0-062C0CEFF05D" -c "3:ceph data" -t "4:CAFECAFE-9B03-4F30-B4C6-B4B80CEFF106" -c "4:ceph block" /dev/sdb']
